{
    "manifest_version": 3,
    "name": "Multi-Copy Paste",
    "version": "1.0",
    "description": "Copy multiple items and paste them from a popup.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "contextMenus" 
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
      },
    "commands": {
      "copy_item": {
        "suggested_key": {
          "default": "Ctrl+Shift+S"
        },
        "description": "Copy selected text"
      },
      "paste_item": {
        "suggested_key": {
          "default": "Ctrl+Shift+V"
        },
        "description": "Paste copied item"
      }
    }
  }
  